@model IEnumerable<IDFWebApp.Models.Custom.raceevent>

@{
    ViewBag.Title = "All Races";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>All Races</h2>

@{
    if (TempData["ErrorMsg"] != null)
    {
        <div class="bg-danger padding-one">
            <p>@TempData["ErrorMsg"]</p>
        </div>
    }
}
@{
    if (TempData["Sucess"] != null)
    {
        <div class="bg-danger padding-one">
            <p>@TempData["Sucess"]</p>
        </div>
    }
}
<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Event Name
        </th>
        <th>
            @Html.DisplayNameFor(model => model.City)
        </th>

        <th>
            @Html.DisplayNameFor(model => model.StartDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.EndDate)
        </th>
        <th>
            Org.
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.City)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StartDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EndDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.organization.Code)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.RaceEventID }) |
                @Html.ActionLink("Details", "Details", new { id = item.RaceEventID }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.RaceEventID })
            </td>
        </tr>
    }

</table>
