@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<h2>List user's roles</h2>
<br />
@using (Html.BeginForm("GetRoles", "Admin", new { Class = "form-horizontal" }))
{
    @Html.AntiForgeryToken()

    <div class="form-group">
        @Html.Label("Username", new { Class = "col-sm-2 control-label" })
        <div class="col-sm-10">
            @Html.DropDownList("UserName", ViewBag.Users as SelectList, new { Class = "form-control" })
        </div>
    </div>
    <br /><br />
    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <button type="submit" class="btn btn-default">List</button>
        </div>
    </div>

}

@if (ViewBag.RolesForUser != null)
{
    <text>
        <h3>Roles for this user </h3>
        <ol>
            @foreach (string s in ViewBag.RolesForUser)
            {
                <li>@s</li>
            }
        </ol>
    </text>
}


<h2>Remove role from user</h2>
<br />
@using (Html.BeginForm("DeleteRoleForUser", "Admin", FormMethod.Post, new { Class = "form-horizontal" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <div class="form-group">
        @Html.Label("Username", new { Class = "col-sm-2 control-label" })
        <div class="col-sm-10">
            @Html.DropDownList("UserName", ViewBag.Users as SelectList, new { Class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        @Html.Label("Role Name", new { Class = "col-sm-2 control-label" })
        <div class="col-sm-10">
            @Html.DropDownList("RoleName", ViewBag.Roles as SelectList, new { Class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <button type="submit" class="btn btn-default">Remove</button>
        </div>
    </div>

}