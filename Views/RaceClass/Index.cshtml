@model IEnumerable<IDFWebApp.Models.Custom.raceclass>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>All Race Classes</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CompetitorLevel)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.MinimumAge)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.MaximumAge)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Gender)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.organization.Name)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CompetitorLevel)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.MinimumAge)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.MaximumAge)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Gender)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.organization.Name)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.RaceClassID }) |
            @Html.ActionLink("Details", "Details", new { id=item.RaceClassID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.RaceClassID })
        </td>
    </tr>
}

</table>
