@model IEnumerable<IDFWebApp.Models.Custom.organizationroletype>
@section styles{
    <link href="~/Content/CSS/Organization.css" rel="stylesheet" />
}

@{
    ViewBag.Title = "Index";
}

<h2>Organization Roles</h2>

@{
    if (TempData["Error"] != null)
    {
        <div class="bg-danger padding-one">
            <p>@TempData["Error"]</p>
        </div>
    }
}

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Code)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            Organization
        </th>
        <th id="orgRoleTypeDescription">
            @Html.DisplayNameFor(model => model.Parameters)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DuesAmount)
        </th>
        <th>
            Currency
        </th>

        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Code)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.organization.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Parameters)
        </td>
               
        <td>
            @Html.DisplayFor(modelItem => item.DuesAmount)
        </td>
       
        <td>
            @Html.DisplayFor(modelItem => item.currency.Code)
        </td>

        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.OrganizationRoleTypeID }) |
            @Html.ActionLink("Details", "Details", new { id=item.OrganizationRoleTypeID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.OrganizationRoleTypeID })
        </td>
    </tr>
}

</table>
